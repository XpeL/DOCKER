name: shadowsocks-libev

on:
  push:
    branches: [ master ]
    paths:
      - '.github/workflows/shadowsocks-libev.yml'
      - '!shadowsocks/libev/**'
  repository_dispatch:
    types: shadowsocks-libev-build

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - name: Prepare
        id: prepare
        run: |
          VERSION=${{ github.event.client_payload.version }}
          [[ ! -n $VERSION ]] && VERSION=3.3.4
          IMAGE_NAME=shadowsocks-libev
          DOCKER_PLATFORMS=linux/386,linux/amd64,linux/arm64,linux/arm/v6,linux/arm/v7,linux/ppc64le,linux/s390x
          echo ::set-output name=buildx_args::--platform ${DOCKER_PLATFORMS} \
            --build-arg VERSION=${VERSION} \
            --tag gists/${IMAGE_NAME}:latest \
            --tag gists/${IMAGE_NAME}:${VERSION} \
            -f ./shadowsocks/libev/Dockerfile \
            ./shadowsocks/libev
      - name: Set up Docker Buildx
        id: buildx
        uses: crazy-max/ghaction-docker-buildx@v3
      - name: Buildx (build)
        run: |
          docker buildx build \
            --output "type=image,push=false" ${{ steps.prepare.outputs.buildx_args }}
      - name: Login to Docker Hub Registry
        if: success()
        env:
          DOCKERHUB_USERNAME: ${{ secrets.DOCKERHUB_USERNAME }}
          DOCKERHUB_PASSWORD: ${{ secrets.DOCKERHUB_PASSWORD }}
        run: echo "${DOCKERHUB_PASSWORD}" | docker login -u "${DOCKERHUB_USERNAME}" --password-stdin
      - name: Buildx (push)
        if: success()
        run: |
          docker buildx build \
            --output "type=image,push=true" ${{ steps.prepare.outputs.buildx_args }}
      - name: Clear
        if: always()
        run: |
          rm -rf ${HOME}.docker/config.json
